<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="VitalSignsPage.weight">




    <TextView
        android:id="@+id/hello"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:fontFamily="@font/amaranth"
        android:text="   Measurement"
        android:textAlignment="center"
        android:textColor="#355770"
        android:layout_marginTop="35dp"
        android:textSize="40sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">

        <ImageView
            android:id="@+id/itemA"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/b1"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:text="  Height"
            android:textAlignment="textStart"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/itemA"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/height"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/b1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:fontFamily="serif"
            android:text=" cm"
            android:textColor="#355770"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/height"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp">

        <ImageView
            android:id="@+id/itemB"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/weight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/b2"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:text="  Weight"
            android:textAlignment="textStart"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/itemB"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/Weight"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/b2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="2"
            android:fontFamily="serif"
            android:text=" Kg"
            android:textColor="#355770"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/Weight"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp">

        <ImageView
            android:id="@+id/itemC"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/date"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/b3"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:text="  Date"
            android:textAlignment="textStart"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/itemC"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/dateW"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/b3"
            app:layout_constraintTop_toTopOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp">

        <ImageView
            android:id="@+id/itemD"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bmi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/b4"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:onClick="CalculateBMI"
            android:text="BMI"
            android:textAlignment="textStart"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/itemD"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/BMI"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            app:layout_constraintLeft_toRightOf="@id/b4"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp">

        <ImageView
            android:id="@+id/itemE"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/status"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/b5"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:text="  Status:"
            android:textAlignment="textStart"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/itemE"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/status"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            app:layout_constraintLeft_toRightOf="@id/b5"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>





    <Button
        android:id="@+id/SaveW"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="80dp"
        android:background="@color/teal_700"
        android:onClick="SaveMeas"
        android:text="Save"

        />

    <Button

        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="5dp"
        android:background="@color/teal_700"
        android:onClick="ViewMeas"
        android:text="View"

        />


</androidx.cardview.widget.CardView>